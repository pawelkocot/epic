{% extends '::base.html.twig' %}

{% block body %}
    <div id="root"></div>
{% endblock %}

{% block javascripts %}
    {% if app.debug %}
        <script type="text/javascript">
            var globals = {
              apiUrl: '{{ url('api_root') }}'
            };
        </script>
        <script src="http://localhost:3000/static/js/bundle.js" type="text/javascript"></script>
    {% else %}
        {% javascripts 'js/build/static/js/*.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock %}

